{{#each this}}
<div class="image-card">
    <a href={{largeImageURL}}>
      <img src={{webformatURL}} alt={{tags}} loading="lazy" />
    </a>
    <div class="info-box">
      <p class="info-item">
        <b>Likes</b>
        <span>{{likes}}</span>
      </p>
      <p class="info-item">
        <b>Views</b>
        <span>{{views}}</span>
      </p>
      <p class="info-item">
        <b>Comments</b>
        <span>{{comments}}</span>
      </p>
      <p class="info-item">
        <b>Downloads</b>
        <span>{{downloads}}</span>
      </p>
    </div>
</div>
{{/each}}